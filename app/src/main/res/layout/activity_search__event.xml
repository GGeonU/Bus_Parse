<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search_Event">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="버스도착정보"
        android:textSize="25dp"
        android:gravity="center"
        android:background="#00a6ff"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"/>

    <FrameLayout
        android:id="@+id/bbb"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#0f9dd1"
        android:layout_below="@id/title"
        android:gravity="center">

        <TextView
            android:id="@+id/station_name"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#0f9dd1"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="station_name"/>

        <ImageButton
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_star" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/set"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/bbb"
        android:background="@drawable/underline"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:id="@+id/set_time"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:text="time"
            android:textColor="#848484"
            android:layout_marginLeft="10dp"/>


        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/refresh"
            android:layout_width="1dp"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="#00ff0000"
            android:src="@drawable/ic_refresh_two_counterclockwise_circular_arrows_interface_symbol"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/set">

        <ListView
            android:id="@+id/arrived_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>

    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>